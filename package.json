{
  "name": "messages-publisher",
  "version": "1.0.0",
  "author": "Sal Gerace",
  "description": "A tool for publishing Apple Messages as a PDF",
  "main": "main.js",
  "scripts": {
    "build": "npm run sass && electron-builder --mac",
    "eslint": "npx eslint --cache main renderer scripts main.js",
    "postinstall": "electron-builder install-app-deps",
    "sass": "npx sass sass/styles.scss assets/css/app.css",
    "start": "node scripts/start.js"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.0",
    "bootstrap": "^5.3.0",
    "bootstrap-icons": "^1.11.0",
    "eventemitter3": "4.0.7",
    "express": "4.18.2",
    "flatpickr": "4.6.13",
    "lodash": "4.17.21",
    "pdfkit": "0.13.0",
    "sharp": "^0.32.0",
    "sqlite3": "5.1.6"
  },
  "devDependencies": {
    "beeper": "1.1.1",
    "chalk": "4.1.2",
    "chokidar": "3.5.3",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0",
    "eslint": "^8.0.0",
    "lodash": "^4.17.21",
    "minimatch": "^8.0.0",
    "preprocess": "^3.2.0",
    "sass": "^1.69.0",
    "tiny-lr": "2.0.0"
  },
  "startConfig": {
    "watch": [
      "assets/css/app.css",
      "main/**/*.{html,js}",
      "renderer/**/*.{html,js}",
      "scripts/**/*.js",
      "main.js"
    ],
    "liveReload": {
      "port": 35739,
      "ignorePatterns": [
        "scripts/**/*.js",
        "main.js"
      ]
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "amd": true,
      "es6": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": "latest"
    },
    "globals": {},
    "extends": "eslint:recommended",
    "rules": {
      "no-var": 2,
      "prefer-const": 2,
      "semi": 2
    },
    "overrides": [
      {
        "files": [
          "tasks/**/*.js"
        ],
        "env": {
          "node": true
        }
      }
    ]
  },
  "build": {
    "productName": "Messages Publisher",
    "appId": "org.sa6.messages-publisher",
    "asar": true,
    "asarUnpack": [
      "**/node_modules/sharp/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg"
      ]
    },
    "directories": {
      "buildResources": "assets/build"
    },
    "publish": {
      "provider": "github",
      "releaseType": "prerelease"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!**/.github",
      "!**/.ops",
      "!**/sass",
      "!**/scripts",
      "!**/tasks"
    ]
  }
}
